import pytest
from playwright.async_api import Page


@pytest.mark.asyncio
async def test_login_with_broken_selectors(page: Page):
    """Test con selectores ROTOS a propósito"""
    
    await page.goto("https://www.saucedemo.com")
    
    # Selectores INCORRECTOS (no existen)
    await page.fill("#username-field", "standard_user")  # ← INCORRECTO
    await page.fill("#pass", "secret_sauce")              # ← INCORRECTO
    await page.click("#submit-btn")                       # ← INCORRECTO
    
    await page.wait_for_url("**/inventory.html")
    assert "inventory.html" in page.url
